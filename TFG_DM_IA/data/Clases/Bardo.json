  "detalles_rasgos_clase": {
    "Inspiración Bárdica": {
      "nivel": 1,
      "descripcion": "Puedes inspirar a otros a través de palabras, música o danza.",
      "dado_inspiracion": "d6 (aumenta a d8 en nivel 5, d10 en nivel 10, d12 en nivel 15).",
      "uso": "Acción Adicional para inspirar a otra criatura a 60 pies (que pueda verte/oírte).",
      "efecto": "La criatura recibe 1 dado de Inspiración Bardica. Una vez en la siguiente hora, si falla una prueba de d20, puede tirar el dado y añadirlo al resultado. El dado se gasta al tirarlo.",
      "cantidad_usos": "Número de veces igual a tu modificador de Carisma (mínimo 1). Recuperas todos los usos en Descanso Largo.",
      "referencia": "[sources 16-24]"
    },
    "Lanzamiento de conjuros": {
      "nivel": 1,
      "descripcion": "Habilidad para lanzar conjuros de Bardo. Ver sección `lanzamiento_conjuros_info` para detalles.",
      "referencia": "[sources 24-44]"
    },
    "Pericia": {
      "nivel": 2,
      "descripcion": "Obtienes Pericia (doble bono de competencia) en 2 de tus competencias en habilidades. Obtienes Pericia en 2 competencias adicionales en nivel 9.",
      "recomendacion_inicial": "Interpretación y Persuasión (si tienes competencia).",
      "referencia": "[sources 45-46]"
    },
    "Mano para Todo": {
      "nivel": 2,
      "descripcion": "Puedes añadir la mitad de tu Bono de Competencia (redondeado abajo) a cualquier prueba de habilidad que realices en la que no tengas competencia y que no use ya tu Bono de Competencia.",
      "referencia": "[sources 47-48]"
    },
    "Subclase de Bardo": {
      "nivel": 3,
      "descripcion": "Eliges un Colegio de Bardo, que te otorga características en este nivel y posteriores.",
      "opciones_documento": [
        "Colegio de Danza",
        "Colegio de Glamour",
        "Colegio de Sabiduría",
        "Colegio de Valor"
      ],
      "referencia": "[sources 49-52]"
    },
    "Mejora de la puntuación de habilidad": {
      "nivel": 4,
      "descripcion": "Obtienes la dote 'Mejora de Puntuación de Habilidad' u otra dote de tu elección para la cual califiques. Se obtiene de nuevo en los niveles 8, 12 y 16.",
      "referencia": "[sources 60-61]"
    },
    "Fuente de Inspiración": {
      "nivel": 5,
      "descripcion": "Recuperas todos los usos gastados de Inspiración Bardica al terminar un Descanso Corto o Largo. Además, puedes gastar un espacio de conjuro (sin acción) para recuperar un uso gastado de Inspiración Bardica.",
      "referencia": "[sources 61-62]"
    },
    "Contrahechizo": {
      "nivel": 7,
      "descripcion": "Si tú o una criatura a 30 pies falláis una TS contra un efecto que aplica la condición Encantado o Aterrorizado, puedes usar tu Reacción para que repita la tirada con Ventaja.",
      "referencia": "[sources 63-64]"
    },
    "Secretos Mágicos": {
      "nivel": 10,
      "descripcion": "Siempre que el número de 'Conjuros Preparados' aumente (incluyendo nivel 10), puedes elegir los nuevos conjuros de las listas de Bardo, Clérigo, Druida o Mago. Estos cuentan como conjuros de Bardo para ti. Al reemplazar conjuros preparados, también puedes elegir de estas listas.",
      "referencia": "[sources 65-67]"
    },
    "Inspiración Superior": {
      "nivel": 18,
      "descripcion": "Cuando tiras Iniciativa, si tienes menos de 2 usos de Inspiración Bardica, recuperas usos hasta tener 2.",
      "referencia": "[source 68]"
    },
    "Bendición Épica": {
      "nivel": 19,
      "descripcion": "Obtienes una Hazaña Épica (recomendada: Recordatorio de Hechizos) u otra hazaña para la que califiques.",
      "referencia": "[sources 69-70]"
    },
    "Palabras de Creación": {
      "nivel": 20,
      "descripcion": "Siempre tienes preparados los conjuros Palabra de Poder: Curar y Palabra de Poder: Matar. Cuando lanzas uno de estos, puedes dirigirte a una segunda criatura si está a 10 pies del primer objetivo.",
      "referencia": "[sources 70-72]"
    }
  },
