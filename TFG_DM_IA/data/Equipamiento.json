      },
      {
        "nombre": "Empujar (Push)",
        "descripcion": "Si impactas, puedes empujar 10 pies si objetivo G o menor.",
        "referencia": "[source 54]"
      },
      {
        "nombre": "Drenar (Sap)",
        "descripcion": "Si impactas, objetivo Desventaja sig. tirada ataque antes inicio tu sig. turno.",
        "referencia": "[source 55]"
      },
      {
        "nombre": "Ralentizar (Slow)",
        "descripcion": "Si impactas y causas daño, reduce Velocidad objetivo 10 pies hasta inicio tu sig. turno (no acumulativo > 10 pies).",
        "referencia": "[sources 56-57]"
      },
      {
        "nombre": "Derribar (Topple)",
        "descripcion": "Si impactas, fuerza TS Constitución (CD 8 + mod ataque + Bono Comp.). Fallo: Caído.",
        "referencia": "[sources 58-59]"
      },
      {
        "nombre": "Hostigar (Vex)",
        "descripcion": "Si impactas y causas daño, Ventaja sig. tirada ataque vs objetivo antes fin tu sig. turno.",
        "referencia": "[source 60]"
      }
